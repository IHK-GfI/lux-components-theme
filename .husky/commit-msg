#!/usr/bin/env bash

# regex to validate in commit msg
commit_regex='(Issue #[0-9]+:|Release|Merge)'
error_msg="Commit wird abgebrochen. Bitte die Commit-Nachricht anpassen. GÃ¼ltige "

if ! grep -iqE "$commit_regex" "$1"; then
    echo
    echo "################################################################################"
    echo "Commit abgebrochen."
    echo "################################################################################"
    echo "Die Commit-Nachricht muss wie folgt beginnen:"
    echo "Issue #123: "
    echo "Merge "
    echo "Release "
    echo >&2
    exit 1
fi
